			<script>
							let types = document.querySelector("#types")
							let typeGraph = new Chart(types, {
							type: "pie",
							data: {
							labels: {{ recType|raw }},
							datasets: [
							{
							label: "Récupération des types",
							data: {{ recCount|raw }},
							backgroundColor: ["pink", "lgreen", "lightblue"]
							}
							]

							}
							})
			</script>

			<script>
							let quantite = document.querySelector("#quantite")
							let quantiteGraph = new Chart(quantite, {
							type: "pie",
							data: {
							labels: {{ prodNom|raw }},
							datasets: [
							{
							label: "Récupération des quantites des produits",
							data: {{ prodQuantite|raw }},
							backgroundColor: ["lgreen", "lightblue"]
							}
							
							]

							}
							})
			</script>
